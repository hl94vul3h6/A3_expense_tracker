<form action="/records" method="POST">
    <div class="container mt-4">
        <div class="row justify-content-center mb-3">
            <div class="col-auto">
                <label for="name" class="fw-bold">名稱*</label>
            </div>
            <div class="col-6">
                <input type="text" class="form-control" id="name" name="name" required />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-auto">
                <label for="date" class="fw-bold">日期*</label>
            </div>
            <div class="col-6">
                <input type="date" class="form-control" id="date" name="date" required />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-auto">
                <label for="category" class="fw-bold">類別*</label>
            </div>
            <div class="col-6">
                <select type="text" class="form-control" id="category" placeholder="Select" list="categoryOptions"
                    name="categoryId" required />
                <option value="">Select</option>
                <option value="1">家居物業</option>
                <option value="2">交通出行</option>
                <option value="3">休閒娛樂</option>
                <option value="4">餐飲食品</option>
                <option value="5">其他</option>
                </select>
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-auto">
                <label for="amount" class="fw-bold">金額*</label>
            </div>
            <div class="col-6">
                <input type="number" name="amount" id="record_amount" min="0" step="1" required />
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success my-3">新增支出</button>
            <a href="/">
                <button type="button" class="btn btn-outline-secondary">返回</button>
            </a>
        </div>
    </div>
</form>